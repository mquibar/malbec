<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="MalbecPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>entidades.Localidad</class>
    <class>entidades.Domicilio</class>
    <class>entidades.Persona</class>
    <class>entidades.TipoUva</class>
    <class>entidades.Empleado</class>
    <class>entidades.Cliente</class>
    <class>entidades.TipoMovimientoi</class>
    <class>entidades.MovimientoStock</class>
    <class>entidades.ComponenteConservante</class>
    <class>entidades.TipoCaja</class>
    <class>entidades.ComponenteBolsa</class>
    <class>entidades.ComponenteAereador</class>
    <class>entidades.TipoCajaConCesta</class>
    <class>entidades.Parcela</class>
    <class>entidades.Caja</class>
    <properties>
      <property name="hibernate.connection.username" value="root"/>
      <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
      <property name="hibernate.connection.password" value="root"/>
      <!--<property name="hibernate.connection.url" value="jdbc:derby:/home/desarrollo/NetBeansProjects/Malbec/malbecdb;create=true"/>-->
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
    </properties>
  </persistence-unit>
</persistence>
